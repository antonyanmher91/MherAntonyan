<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_posts"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:src="@drawable/ic_launcher_background" />

    <EditText
        android:id="@+id/addres_problem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_posts"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edit_text_top"
        android:hint="address"
        android:textColorHint="#60AF5050"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/description_problem"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addres_problem"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edit_text_top"
        android:hint="descriptiopn problem"
        android:textColorHint="#60AF5050"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="#FE5295"
            android:textSize="17sp"
            />

        <Button
            android:id="@+id/close_dialog"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="Cansle"
            android:textAllCaps="false"
            android:textColor="#FE5295"
            android:textSize="17sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/open_gallirey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="gallirey"
            android:textColor="#FE5295" />

        <Button
            android:id="@+id/open_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="camer"
            android:textColor="#FE5295" />

        <Button
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="location"
            android:textColor="#FE5295" />

    </LinearLayout>


</LinearLayout>